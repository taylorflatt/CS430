@model Notown.Models.Album

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Producer:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Musician.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Speed)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Speed)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CopyrightDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CopyrightDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Songs)
        </dt>
        <dd>
            @if (Model.Songs != null)
            {
                @foreach (var song in Model.Songs)
                {
                    @Html.DisplayFor(modelItem => song.Title)
                    <br />
                }
            }
            else
            {
                <p>No Songs have been added to this album yet. Try <a asp-area="" asp-controller="Songs" asp-action="Create">adding one</a>!</p>

            }
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> <em>|</em>
    }
    
    <a asp-action="Index">Back to List</a>
</div>
