@model Notown.Models.NotownViewModels.CreatePlaceViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Place</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Place.Address" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Place.Address" class="form-control" />
                <span asp-validation-for="Place.Address" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Place.TelephoneNumber" class="col-md-2 control-label">Telephone Number</label>
            <div class="col-md-10">
                <input asp-for="Place.TelephoneNumber" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Musician</label>
            <div class="col-md-10">
                <select asp-for="MusicianIDs" class="form-control" asp-items="ViewBag.MusicianID" multiple="multiple"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
