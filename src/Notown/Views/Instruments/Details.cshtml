@model Notown.Models.Instrument

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Instrument</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Key)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Key)
        </dd>
        <dt>
            Users
        </dt>
        <dd>
                @if (Model.Musicians.Count() != 0)
                {
                    <ol>
                        @foreach (var musician in Model.Musicians)
                        {
                            <li>@Html.DisplayFor(modelItem => musician.Name)</li>
                        }
                    </ol>
                }
                else
                {
                    <p>No musicians currently use this instrument! Try <a asp-area="" asp-controller="Musicians" asp-action="Index">adding one</a>!</p>
                }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
