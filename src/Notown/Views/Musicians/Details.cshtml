@model Notown.Models.Musician

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Musician</h4>
    <hr />
    <dl class="dl-horizontal">
        @if (User.Identity.IsAuthenticated)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Ssn)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Ssn)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Instrument)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Instrument.Name)
        </dd>
        @if (User.Identity.IsAuthenticated)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Place)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Place.Address)
            </dd>
        }
        <dt>
            Album List
        </dt>
        <dd>
            @foreach (var album in Model.Albums)
            {
                @Html.DisplayFor(modelItem => album.Name)
                <br />
            }
        </dd>
        <dt>
            Song List
            <br />
        </dt>
        <dd>
            <strong>(Album - Song)</strong>
            <br />
            @foreach (var song in Model.Songs)
            {
                if (song.AlbumID != null)
                {
                    @Html.DisplayFor(modelItem => song.Album.Name) <text> - </text> @Html.DisplayFor(modelItem => song.Title);

                }
                else
                {
                    <text><em>No Album</em>- </text>@Html.DisplayFor(modelItem => song.Title)
                }
                <br />
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> <em>|</em>
    }
    
    <a asp-action="Index">Back to List</a>
</div>
